<%- include('layout') %>

<div class="absolute top-4 right-4">
  <button onclick="toggleTheme()" id="theme-toggle" title="Toggle theme"
    class="text-gray-400 hover:text-white transition-colors text-lg leading-none">
  </button>
</div>

<div class="min-h-full flex items-center justify-center py-12 px-4">
  <div class="w-full max-w-sm space-y-8">
    <div class="text-center">
      <img src="/public/logo.png" alt="Tingle Digital" class="theme-logo h-16 mx-auto mb-4 opacity-80">
      <h1 class="text-3xl font-bold text-white">TingleVPN</h1>
      <p class="mt-2 text-gray-400">Sign in to the dashboard</p>
    </div>

    <% if (error) { %>
      <div class="bg-red-900/50 border border-red-700 text-red-300 px-4 py-3 rounded-lg text-sm">
        <%= error %>
      </div>
    <% } %>

    <form method="POST" action="/login" class="space-y-6">
      <div>
        <label for="username" class="block text-sm font-medium text-gray-300">Username</label>
        <input type="text" id="username" name="username" required autocomplete="username"
          class="mt-1 block w-full rounded-lg bg-gray-800 border border-gray-700 text-white px-3 py-2
                 focus:outline-none focus:ring-2 focus:ring-vpn-500 focus:border-transparent">
      </div>
      <div>
        <label for="password" class="block text-sm font-medium text-gray-300">Password</label>
        <input type="password" id="password" name="password" required autocomplete="current-password"
          class="mt-1 block w-full rounded-lg bg-gray-800 border border-gray-700 text-white px-3 py-2
                 focus:outline-none focus:ring-2 focus:ring-vpn-500 focus:border-transparent">
      </div>
      <button type="submit"
        class="w-full py-2 px-4 rounded-lg bg-vpn-600 hover:bg-vpn-700 text-white font-medium
               transition-colors focus:outline-none focus:ring-2 focus:ring-vpn-500 focus:ring-offset-2 focus:ring-offset-gray-950">
        Sign In
      </button>
    </form>

    <div class="text-center pt-4">
      <a href="https://tingledigital.com" target="_blank" class="text-xs text-gray-600 hover:text-gray-400 transition-colors">
        tingledigital.com
      </a>
    </div>
  </div>
</div>

</body>
</html>
