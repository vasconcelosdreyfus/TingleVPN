<!-- Add Client Modal -->
<div id="add-client-modal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black/60">
  <div class="bg-gray-900 border border-gray-700 rounded-xl p-6 w-full max-w-md mx-4 shadow-2xl">
    <h3 class="text-lg font-semibold text-white mb-4">Add New Client</h3>

    <div id="add-client-form-section">
      <form onsubmit="addClient(event)">
        <div class="mb-4">
          <label for="client-name" class="block text-sm font-medium text-gray-300 mb-1">Client Name</label>
          <input type="text" id="client-name" required pattern="[a-zA-Z0-9_-]+"
            placeholder="e.g. iphone, notebook-work"
            class="block w-full rounded-lg bg-gray-800 border border-gray-700 text-white px-3 py-2
                   focus:outline-none focus:ring-2 focus:ring-vpn-500 focus:border-transparent">
          <p class="text-xs text-gray-500 mt-1">Letters, numbers, hyphens and underscores only</p>
        </div>
        <div class="flex gap-3 justify-end">
          <button type="button" onclick="closeAddClientModal()"
            class="px-4 py-2 text-sm text-gray-400 hover:text-white transition-colors">
            Cancel
          </button>
          <button type="submit" id="add-client-btn"
            class="px-4 py-2 text-sm font-medium rounded-lg bg-vpn-600 hover:bg-vpn-700 text-white transition-colors">
            Generate Client
          </button>
        </div>
      </form>
    </div>

    <!-- QR Result section (hidden initially) -->
    <div id="add-client-result" class="hidden text-center">
      <p class="text-green-400 font-medium mb-2" id="result-message"></p>
      <p class="text-xs text-gray-500 mb-3" id="result-details"></p>
      <div class="flex justify-center mb-4">
        <img id="result-qr" src="" alt="QR Code" class="rounded-lg">
      </div>
      <p class="text-xs text-gray-500 mb-4">Scan with the WireGuard app on your device</p>
      <button onclick="closeAddClientModal()"
        class="px-4 py-2 text-sm font-medium rounded-lg bg-gray-700 hover:bg-gray-600 text-white transition-colors">
        Close
      </button>
    </div>
  </div>
</div>

<!-- QR Modal (for existing clients) -->
<div id="qr-modal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black/60">
  <div class="bg-gray-900 border border-gray-700 rounded-xl p-6 w-full max-w-sm mx-4 shadow-2xl text-center">
    <h3 class="text-lg font-semibold text-white mb-1" id="qr-modal-title">QR Code</h3>
    <p class="text-xs text-gray-500 mb-4">Scan with the WireGuard app</p>
    <div class="flex justify-center mb-4">
      <img id="qr-modal-img" src="" alt="QR Code" class="rounded-lg">
    </div>
    <button onclick="closeQRModal()"
      class="px-4 py-2 text-sm font-medium rounded-lg bg-gray-700 hover:bg-gray-600 text-white transition-colors">
      Close
    </button>
  </div>
</div>
